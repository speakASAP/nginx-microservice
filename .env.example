# Nginx Microservice Environment Variables
# Copy this file to .env and fill in your values

# Let's Encrypt Configuration
CERTBOT_EMAIL=
CERTBOT_STAGING=

# Docker Network Configuration
NETWORK_NAME=

# Production Paths (Environment-Specific)
# Set PRODUCTION_BASE_PATH to your server's base directory (e.g., /home/statex, /home/alfares)
PRODUCTION_BASE_PATH=
DATABASE_SERVER_PATH=

# Docker Volumes Base Path (Environment-Specific)
# Set DOCKER_VOLUMES_BASE_PATH to your server's storage location for Docker volumes
DOCKER_VOLUMES_BASE_PATH=

# Multi-Domain Service Configuration
MULTI_DOMAIN_SERVICE_NAME=

# Default Domain Suffix (Optional)
DEFAULT_DOMAIN_SUFFIX=

# Docker Images
HEALTH_CHECK_IMAGE=
CERTBOT_IMAGE=
POSTGRES_IMAGE=
REDIS_IMAGE=
